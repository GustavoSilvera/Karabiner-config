{
  "title": "System shortcuts",
  "rules": [
    {
      "description": "Ctrl + Super + A => mission control (in terminal)",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$",
                "^io\\.alacritty$",
                "^net\\.kovidgoyal\\.kitty$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "left_option",
                "left_control"
              ]
            }
          },
          "to": [
            {
              "key_code": "mission_control"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}